<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6EFE4"
    tools:context=".SinglePlantActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lightrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="245dp"
            android:layout_height="230dp"
            app:cardCornerRadius="500dp"
            app:layout_constraintBottom_toTopOf="@+id/plantName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.029"
                tools:srcCompat="@tools:sample/avatars" />


        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/pencil"
            android:layout_width="148dp"
            android:layout_height="78dp"
            android:clickable="true"
            android:elevation="100dp"
            android:paddingRight="86dp"
            android:paddingBottom="6dp"
            android:rotation="35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.302"
            app:srcCompat="@drawable/pencil" />

        <TextView
            android:id="@+id/plantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="256dp"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <TextView
            android:id="@+id/reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plantName"
            app:layout_constraintVertical_bias="0.325"
            tools:text="Reminders" />

        <ImageView
            android:id="@+id/waterdrops"
            android:layout_width="20dp"
            android:layout_height="27dp"
            app:layout_constraintEnd_toStartOf="@+id/reminders"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plantName"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/waterdrop" />

        <ImageButton
            android:id="@+id/border_for_buttons"
            android:layout_width="382dp"
            android:layout_height="129dp"
            android:background="#00000000"
            android:src="@drawable/buttons_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cycle" />


        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="127dp"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:background="#00BDACAC"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/earth_home_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="127dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/plant_history"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/border_for_buttons"
            app:layout_constraintVertical_bias="0.686" />

        <ImageButton
            android:id="@+id/mydiary_button"
            android:layout_width="127dp"
            android:layout_height="80dp"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/my_diary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/history_button"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/home_button"
            app:layout_constraintTop_toTopOf="@+id/border_for_buttons"
            app:layout_constraintVertical_bias="0.686" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDateEntry"
            android:layout_width="351dp"
            android:layout_height="148dp"
            android:layout_marginTop="356dp"
            app:layout_constraintBottom_toTopOf="@+id/border_for_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.416"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/recwatering"
            android:layout_width="343dp"
            android:layout_height="27dp"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:text="Watering Recommendation:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewDateEntry" />


        <TextView
            android:id="@+id/cycle"
            android:layout_width="346dp"
            android:layout_height="26dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Life Span:"
            app:layout_constraintBottom_toTopOf="@+id/border_for_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recsunlight" />

        <TextView
            android:id="@+id/recsunlight"
            android:layout_width="347dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:text="Sunlight Recommendation: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/border_for_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recwatering"
            app:layout_constraintVertical_bias="0.09" />

        <ImageView
            android:id="@+id/lightrecpic"
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/recsunlight"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recwatering"
            app:srcCompat="@drawable/lights" />

        <ImageView
            android:id="@+id/waterrec"
            android:layout_width="17dp"
            android:layout_height="25dp"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toTopOf="@+id/lightrecpic"
            app:layout_constraintEnd_toStartOf="@+id/recwatering"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewDateEntry"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/wateringplants" />

        <ImageView
            android:id="@+id/cyclepic"
            android:layout_width="16dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/cycle"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lightrecpic"
            app:srcCompat="@drawable/eco" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>